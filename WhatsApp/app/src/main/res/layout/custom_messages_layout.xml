<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiver_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/profile_image"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/receiver_text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Receiver text messages here"
        android:textColor="@android:color/background_light"
        android:layout_toEndOf="@id/receiver_profile_image"
        android:layout_marginTop="10dp"
        android:background="@drawable/receiver_message_layout"
        android:padding="8dp"
        android:textSize="16dp"/>

    <ImageView
        android:id="@+id/message_sender_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"/>
    <ImageView
        android:id="@+id/message_receiver_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sender messages here."
        android:textColor="@android:color/background_light"
        android:background="@drawable/sender_message_layout"
        android:layout_alignParentTop="@+id/receiver_text_message"
        android:textSize="16dp"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>