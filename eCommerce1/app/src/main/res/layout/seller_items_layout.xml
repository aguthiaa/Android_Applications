<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/seller_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/seller_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/seller_product_name"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/seller_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seller_product_image"
            android:text="Product Price"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/seller_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@id/seller_product_price"
            android:text="Product Description"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textSize="16dp"/>


        <TextView
            android:id="@+id/seller_product_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@id/seller_product_description"
            android:text="Product Status"
            android:textColor="@android:color/holo_green_dark"
            android:textAlignment="center"
            android:textSize="16dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>