<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">

    <RelativeLayout
        android:id="@+id/card_items_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/friends_profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/friends_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@id/friends_profile_image"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/accept_friend_request_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Accept Friend Request"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:layout_below="@id/friends_username"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/cancel_friend_request_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Cancel Friend Request"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="@color/colorAccent"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:layout_below="@id/friends_username"
            android:layout_toRightOf="@id/accept_friend_request_btn"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>